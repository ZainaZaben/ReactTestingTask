{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "typeRoots": ["node_modules/@types", "src/types"],
    "moduleResolution": "node",
    "types": ["cookie", "node"]
  },
  "include": ["src"]
}